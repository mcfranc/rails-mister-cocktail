<div class="container">
  <div class="center-block">
    <h1>
      Cocktails
    </h1>
    <% @cocktails.each do |cocktail| %>
        <div>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
    <% end %>
    <hr>
    <div>
        <%= link_to "Create a new cocktail", new_cocktail_path %>
    </div>
  </div>
</div>

